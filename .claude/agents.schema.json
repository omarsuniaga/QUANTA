{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://quanta.app/schemas/agents.json",
    "title": "QUANTA AI Agents Schema",
    "description": "JSON Schema for QUANTA multi-agent system - compatible with all AI assistants",
    "version": "1.0.0",
    "type": "object",
    "required": [
        "version",
        "project",
        "agents",
        "protocol"
    ],
    "properties": {
        "version": {
            "type": "string",
            "description": "Schema version",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "project": {
            "type": "object",
            "required": [
                "name",
                "description"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Project name"
                },
                "description": {
                    "type": "string",
                    "description": "Project description"
                },
                "repository": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "protocol": {
            "type": "object",
            "required": [
                "name",
                "version",
                "compatibility"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "const": "QUANTA Multi-AI Agent Protocol"
                },
                "version": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "compatibility": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "claude",
                            "gemini",
                            "chatgpt",
                            "copilot",
                            "generic"
                        ]
                    },
                    "minItems": 1
                },
                "consultation_required": {
                    "type": "boolean",
                    "description": "Whether AI must consult agents before responding"
                }
            }
        },
        "agents": {
            "type": "array",
            "description": "List of available agents",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "role",
                    "priority",
                    "capabilities",
                    "triggers"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$",
                        "description": "Unique agent identifier"
                    },
                    "name": {
                        "type": "string",
                        "description": "Human-readable agent name"
                    },
                    "file": {
                        "type": "string",
                        "description": "Path to agent documentation file"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "coordinator",
                            "developer",
                            "designer",
                            "analyst",
                            "devops",
                            "reviewer",
                            "documenter",
                            "tester",
                            "architect"
                        ],
                        "description": "Agent role category"
                    },
                    "priority": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 3,
                        "description": "Agent priority (1=highest, 3=lowest)"
                    },
                    "capabilities": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "description": "List of agent capabilities"
                    },
                    "triggers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "description": "Keywords that trigger this agent"
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Other agents this agent depends on"
                    },
                    "context_files": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Context files this agent needs"
                    }
                }
            }
        },
        "workflows": {
            "type": "object",
            "description": "Predefined workflows",
            "properties": {
                "default_agent": {
                    "type": "string",
                    "description": "Default agent to consult"
                },
                "collaboration_mode": {
                    "type": "string",
                    "enum": [
                        "sequential",
                        "parallel",
                        "hybrid"
                    ],
                    "description": "How agents collaborate"
                },
                "review_required": {
                    "type": "boolean",
                    "description": "Whether code review is mandatory"
                },
                "auto_agent_consultation": {
                    "type": "boolean",
                    "description": "Whether to automatically consult agents"
                },
                "consultation_priority": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Priority order for agent consultation"
                }
            }
        },
        "rules": {
            "type": "object",
            "description": "Global rules for AI assistants",
            "properties": {
                "always_check_agents": {
                    "type": "boolean",
                    "description": "Must always check agents before responding"
                },
                "agent_first_approach": {
                    "type": "string",
                    "description": "Description of agent-first approach"
                },
                "mandatory_agent_review": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Mandatory agent reviews by task type"
                }
            }
        }
    }
}